{% extends 'base.html.twig' %}
{% set title = 'Payment'|trans %}

{% block body %}
    <h1>Payments list</h1>

    <!-- Hover Rows -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-light-blue">
                    <a class="btn btn-success waves-effect pull-right" href="{{ path('payment_new') }}">
                        <i class="material-icons">add_circle</i>
                        <span>New</span>
                    </a>
                    <h2>{{ title|upper }}</h2>
                </div>
                <div class="body table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Charge</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for payment in payments %}
                            <tr>
                                <th>{{ payment.charge }}</th>
                                <td>{{ payment.amount }}</td>
                                <td>{{ payment.date|date('d-m-Y') }}</td>
                                <td>{{ payment.type }}</td>
                                <td>
                                    <a href="{{ url('payment_show', {id: payment.id }) }}">
                                        <i class="material-icons">visibility</i>
                                    </a>
                                    <a href="{{ url('payment_edit', {id: payment.id }) }}">
                                        <i class="material-icons">mode_edit</i>
                                    </a>
                                    <a href="{{ url('payment_delete', {id: payment.id }) }}">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
