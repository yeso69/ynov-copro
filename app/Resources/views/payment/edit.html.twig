{% extends 'base.html.twig' %}
{% set title = 'Payment'|trans %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
{% block body %}
    <div class="card">
        <div class="header bg-pink">
            <h2>New payment</h2>
        </div>
        <div class="body">
            <div class="row clearfix">
                {{ form_start(edit_form) }}
                {%  if form_errors(edit_form) %}
                <div class="alert alert-danger">
                    {{ form_errors(edit_form) }}
                </div>
                {% endif %}
                <div class="form-group">
                    <div class="form-line">
                        {{ form_widget(edit_form.amount, { 'attr': {'class': 'form-control', 'placeholder':'Amount'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(edit_form.charge) }}
                        {{ form_widget(edit_form.charge, { 'attr': {'class': 'form-control show-tick'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(edit_form.contract) }}
                        {{ form_widget(edit_form.contract, { 'attr': {'class': 'form-control show-tick'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(edit_form.date) }}
                        {{ form_widget(edit_form.date, { 'attr': {'class': 'form-control datepicker'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ edit_form.document.vars.data }}
                        {{ form_label(edit_form.document) }}
                        {{ form_widget(edit_form.document, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(edit_form.owner) }}
                        {{ form_widget(edit_form.owner, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(edit_form.type) }}
                        {{ form_widget(edit_form.type, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(edit_form.done) }}
                        {{ form_widget(edit_form.done, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group text-center">
                    <div class="form-line">
                        <button class="btn btn-info btn-lg">Submit</button>
                        <!--input type="submit" value="Create" class="form-control"/-->
                    </div>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('payment_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
