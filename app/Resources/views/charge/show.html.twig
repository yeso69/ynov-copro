{% extends 'base.html.twig' %}
{% set title = 'Charge'|trans %}
{% block body %}
    <h1>Charge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ charge.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ charge.subject }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ charge.cost }}</td>
            </tr>
            <tr>
                <th>Duedate</th>
                <td>{% if charge.dueDate %}{{ charge.dueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if charge.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ charge.document }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('charge_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('charge_edit', { 'id': charge.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
