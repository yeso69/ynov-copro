{% extends 'base.html.twig' %}

{% set title = 'Charges'|trans %}

{% block body %}

    <!-- Hover Rows -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-light-blue">
                    <h2>{{ charge.subject }}</h2>
                </div>
                <div class="body table-responsive">
                    <table class="table table-hover">
                        <tbody>
                        <tr>
                            <th>Sujet</th>
                            <td>{{ charge.subject }}</td>
                        </tr>
                        <tr>
                            <th>Coût</th>
                            <td>{{ charge.cost }}</td>
                        </tr>
                        <tr>
                            <th>Echéance</th>
                            <td>{% if charge.dueDate %}{{ charge.dueDate|date('d/m/Y') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{% if charge.status %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Document</th>
                            <td><a href="{{ asset('uploads/' ~ charge.document) }}" target="_blank">View file (PDF)</a></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Hover Rows -->

{% endblock body %}

{% block javascripts %}
{% endblock javascripts %}