{% extends 'base.html.twig' %}

{% set title = 'Charges'|trans %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
{% block body %}
    <div class="card">
        <div class="header bg-pink">
            <h2>New charge</h2>

        </div>

        <div class="body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_label(form.subject) }}
            <div class="form-group">
                <div class="form-line">
                    {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_label(form.cost) }}
            <div class="form-group">
                <div class="form-line">
                    {{ form_widget(form.cost, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
                </div>
            </div>


            {{ form_label(form.status) }}
            <div class="form-group">
                <div class="form-line">
                    {{ form_widget(form.status, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
                </div>
            </div>

            {{ form_label(form.contract) }}
            <div class="form-group">
                <div class="form-line">
                    {{ form_widget(form.contract, {'attr': {'class': '', 'type': 'number'}}) }}
                </div>
            </div>

            {{ form_row(form.document) }}

            {{ form_label(form.dueDate) }}
            <div class="form-group">
                <div class="form-line">
                    {{ form_widget(form.dueDate, {'attr': {'class': 'form-control date', 'type': 'text'}}) }}
                </div>
            </div>

            <div class="form-group">
                <button type="submit" value="Submit" class="btn bg-cyan btn-block btn-lg waves-effect">
                    <i class="material-icons">check</i>
                    <span>SUBMIT</span>
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock body %}

{% block javascripts %}
{% endblock javascripts %}
