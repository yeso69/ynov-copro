{% extends 'base.html.twig' %}
{% set title = "Projects" %}

{% block body %}

    <!-- Hover Rows -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-light-blue">
                    <a class="btn btn-success waves-effect pull-right" href="{{ path('project_new') }}">
                        <i class="material-icons">add_circle</i>
                        <span>New</span>
                    </a>
                    <h2>{{ title|upper }}</h2>
                </div>
                <div class="body table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Created By</th>
                            <th>Open date</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in projects %}
                            <tr>
                                <td>{{ project.name }}</td>
                                <td>{{ project.description }}</td>
                                <td>{{ project.status }}</td>
                                <td>{{ project.creator.username }}</td>
                                <th>{{ project.openDate|date('Y-m-d H:i:s') }}</th>
                                <td>
                                    <a href="{{ url('project_show', {id: project.id }) }}">
                                        <i class="material-icons">visibility</i>
                                    </a>
                                    <a href="{{ url('project_delete', {id: project.id }) }}">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Hover Rows -->

{% endblock body %}

