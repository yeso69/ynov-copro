{% extends 'base.html.twig' %}
{% set title = "Edit discussion" %}

{% block body %}
    <div class="card">
        <div class="header bg-pink">
            <h2>Edit {{ discussion.subject }}</h2>
        </div>

        <div class="body">
            <div class="row clearfix">
                {{ form_start(form) }}
                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(form.subject) }}
                        {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'type': 'text'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-line">
                        {{ form_label(form.members) }}
                        {{ form_widget(form.members, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <button type="submit" value="Submit" class="btn bg-cyan btn-lg waves-effect pull-right">
                    <i class="material-icons">check</i>
                    <span>SUBMIT</span>
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock body %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
