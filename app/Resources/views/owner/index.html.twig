{% extends 'base.html.twig' %}
{% set title = 'Owners'|trans %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
{% block body %}
    <h1>Owners list</h1>

    <!-- Hover Rows -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header bg-light-blue">
                    <a class="btn btn-success waves-effect pull-right" href="{{ path('owner_new') }}">
                        <i class="material-icons">add_circle</i>
                        <span>New</span>
                    </a>
                    <h2>{{ title|upper }}</h2>
                </div>
                <div class="body table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Username</th>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for owner in owners %}
                            <tr>
                                <th>{{ owner.username }}</th>
                                <td>{{ owner.firstname }}</td>
                                <td>{{ owner.lastname }}</td>
                                <td>{{ owner.email }}</td>
                                <td>{{ owner.roles|join }}</td>
                                <td>
                                    <a href="{{ url('owner_show', {id: owner.id }) }}">
                                        <i class="material-icons">visibility</i>
                                    </a>
                                    <a href="{{ url('owner_edit', {id: owner.id }) }}">
                                        <i class="material-icons">mode_edit</i>
                                    </a>
                                    <a href="{{ url('owner_delete', {id: owner.id}) }}">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            {{ message }}
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
